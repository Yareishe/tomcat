<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>TimeServletApp</display-name>

  <servlet>
    <servlet-name>TimeServlet</servlet-name>
    <servlet-class>org.example.TimeServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>TimeServlet</servlet-name>
    <url-pattern>/time</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>TimezoneValidateFilter</servlet-name>
    <servlet-class>org.example.TimezoneValidateFilter</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>TimezoneValidateFilter</servlet-name>
    <url-pattern>/time?timezone=maxim</url-pattern>
  </servlet-mapping>

</web-app>